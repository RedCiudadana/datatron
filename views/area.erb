<script>

// Layout

// Apparently, #area inherits width from the container and #chart
var clientWidth = parseInt(d3.select("#area").style("width"));

var margin = { top: 40, right: 0, bottom: 40, left: 40 },
    height = 500 - margin.top - margin.bottom,
    width = clientWidth - margin.left - margin.right;

var iso = d3.time.format.utc("%Y-%m-%d");
var dayFormat = d3.time.format("%d");

// Main SVG

var svg = d3.select("#area").append("svg")
    .attr("width", width + margin.left + margin.right)
    .attr("height", height + margin.top + margin.bottom)
  .append("g")
    .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

// Scales

var x = d3.time.scale().range([0, width]),
    y = d3.scale.linear().range([height, 0]);

// An area generator

var areaGenerator = d3.svg.area()
  .interpolate("linear")
  .x(function(d) {
    return x(d.date)
  })
  .y0(height)
  .y1(function(d) {
    return y(d.count) });

d3.json("/answers/daily.json", function(error, data) {

  data.forEach(function(d) {
    d.date = iso.parse(d.date);
  });

  dateRange = d3.extent(data, function(d) { return d.date; });
  x.domain(dateRange);
  y.domain([0, d3.max(data, function(d) { return d.count; }) + 10]);

  svg.append("path")
    .datum(data)
    .attr("class", "area")
    .attr("d", areaGenerator);

  // Axis

  var xAxis = d3.svg.axis()
        .scale(x)
        .ticks(d3.time.days, dateRange)
        .tickFormat(dayFormat)
        .orient("bottom"),
      yAxis = d3.svg.axis()
        .scale(y)
        .orient("left");

  svg.append("g")
      .attr("class", "x axis")
      .attr("transform", "translate(0," + height + ")")
      .call(xAxis);

  svg.append("g")
      .attr("class", "y axis")
      .attr("transform", "translate(0,0)")
      .call(yAxis);

});

</script>

